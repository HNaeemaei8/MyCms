@if (User.Identity.IsAuthenticated)
{
    <li><a asp-action="Index" asp-controller="Home" asp-area="UserPanel"> @User.Identity.Name خوش آمدید </a></li>
    <li><a  asp-controller="Account" asp-action="Logout" > خروج </a></li>

}
else
{
    <li><a asp-action="Register" asp-controller="Account"> ثبت نام </a></li>
    <li><a asp-action="Login" asp-controller="Account"> ورود به سایت </a></li>

}
