@model IEnumerable<MyCms.Domain.Entities.Page.PageComment>

@foreach (var item in Model)
{
    <!-- start each comment -->
    <li>
        <img src="~/PageImages/female-and-male-icon-13.png">
        <div>
            <span> @item.User.UserName </span>
            <span> @item.CreateDate.ToShamsi() </span>
        </div>
        <p>@item.Comment</p>
    </li>
    <!-- end each comment -->

}